{
  "name": "authors-haven-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "pretest": "NODE_ENV=test npm run undo:migrate:db && NODE_ENV=test npm run migrate:db",
    "test": " NODE_ENV=test  jest ./test/tests.test.js --detectOpenHandles --verbose --coverage --forceExit",
    "build": "babel server/src -d server/dist",
    "start": "node ./server/dist/app.js",
    "dev": "nodemon ./server/src/connectServer.js --exec babel-node",
    "migrate:db": "sequelize db:migrate",
    "migrate:test_db": "NODE_ENV=test sequelize db:migrate",
    "undo:migrate:db": "sequelize db:migrate:undo:all",
    "seed:db": "sequelize db:seed:all",
    "reset:db": "npm run migrate:undo && npm run migrate && npm run seed:db",
    "lint": "eslint --fix src/**/*.js"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oleesir/authors-haven-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oleesir/authors-haven-api/issues"
  },
  "homepage": "https://github.com/oleesir/authors-haven-api#readme",
  "dependencies": {
    "bcrypt": "^4.0.1",
    "crypto-random-string": "^3.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.25.3",
    "nodemailer": "^6.4.6",
    "nodemailer-mailgun-transport": "^2.0.0",
    "pg": "^8.0.2",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.7",
    "sequelize-cli": "^5.5.1",
    "swagger-ui-express": "^4.1.4",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@babel/register": "^7.9.0",
    "jest": "^25.3.0",
    "supertest": "^4.0.2"
  }
}
